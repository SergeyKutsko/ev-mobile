<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:datePickerDialogTheme">@style/DialogPicker.Theme</item>
    <item name="android:timePickerDialogTheme">@style/DialogPicker.Theme</item>
    <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
    <item name="android:navigationBarColor">@color/navigationBarBackground</item>
    <item name="android:windowLightNavigationBar">true</item>
  </style>

    <style name="BootTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bootsplash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/bootsplash_logo</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@color/bootsplash_background</item>
        <item name="android:navigationBarColor">@color/bootsplash_background</item>
    </style>

</resources>
